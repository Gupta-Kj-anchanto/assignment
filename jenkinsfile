
pipeline {
    agent any
    environment {
      PORT = "8383"
    }
    tools {
        maven "maven"
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }

        stage("Kill Server") {
            steps {
                sh '''#!/bin/bash
                    process=$(lsof -t -i:${PORT})
                    echo $process
                    
                    if [ -z "$process" ]
                    then
                        echo "No process at port ${PORT}"
                    else
                        echo "Killing process at port ${PORT}"
                        kill $process
                    fi
                '''
            }
        }

        stage("Deploy") {
            steps {
                withEnv(["JENKINS_NODE_COOKIE=dontkill"]) {
                    sh "nohup mvn spring-boot:run -D server.port=${PORT} &"
                }
            }
        }
    }


    post {
       failure {  
       emailext attachLog: true, body: "${currentBuild.result}: ${BUILD_URL}", compressLog: true, replyTo: '',
       subject: "Build Notification: ${JOB_NAME}-Build# ${BUILD_NUMBER} ${currentBuild.result}", to: 'kajal.gupta@anchanto.com'
         }
       
    }
}
