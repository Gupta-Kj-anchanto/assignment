pipeline {
    agent any

    tools {
        maven "maven"
    }

   
    stages {
        stage("Build") {
           script {
              try {
                    sh "mvn -version"
                    sh "mvn clean install"
                    echo "do your stuff"
              } 
              catch (Exception e) {
                  echo "Ended the never ending stage and proceeding to the next stage"
              }
            }  
        }

        stage("Kill Server") {
            steps {
                sh '''#!/bin/bash
                    process=$(lsof -t -i:8383)
                    echo $process
                    
                    if [ -z "$process" ]
                    then
                        echo "No process at port 8383"
                    else
                        echo "Killing process at port 8383"
                        kill $process
                    fi
                '''
            }
        }

        stage("Run") {
            steps {
                sh "mvn spring-boot:run"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
       
    }
}
