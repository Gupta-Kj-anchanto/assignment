
pipeline {
    agent any
    environment {
      PORT = "8383"
    }
    tools {
        maven "maven"
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }

        stage("Kill Server") {
            steps {
                sh '''#!/bin/bash
                    process=$(lsof -t -i:${PORT})
                    echo $process
                    
                    if [ -z "$process" ]
                    then
                        echo "No process at port ${PORT}"
                    else
                        echo "Killing process at port ${PORT}"
                        kill $process
                    fi
                '''
            }
        }

        stage("Deploy") {
            steps {
                withEnv(["JENKINS_NODE_COOKIE=dontkill"]) {
                    sh "nohup mvn spring-boot:run -D server.port=${PORT} &"
                }
            }
        }
    }


    post {
       failure {  
       mail bcc: '', body: "<b>Example</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL de build: ${env.BUILD_URL}" <br><br> ${BUILD_LOG, maxLines=8000, escapeHtml=true}, cc: '', charset: 'UTF-8', from: '', mimeType: 'text/html', replyTo: '', subject: "ERROR CI: Project name -> ${env.JOB_NAME}", to: "kajal.gupta@anchanto.com";  

         }
       
    }
}
